<div id="<%= dom_id item %>">
  <p>
    <strong>Title:</strong>
    <%= item.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= item.price %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= item.image_url %>
  </p>


  <p>
    <%= button_to "Ajouter au panier", cart_items_path(item_id: item.id), method: :post %>
  </p>

</div>
