<% if @cart_items.any? %>
  <ul>
        <% total = 0 %> <!--Initialisation du prix total à 0 avant la  boucle. --->
    <% @cart_items.each do |cart_item| %>
      <li>
        <%= cart_item.item.title %> -
        <%= cart_item.item.price %> -
      </li>
      <% total += cart_item.item.price %> <!-- À chaque itération, le prix de l'article actuel est ajouté à la variable total.--->
    <% end %>
 
<!-- ... bouton stripe ... -->
      </form>
        <%= button_to "Confirmer la commande et payer", checkout_create_path(total: @cart_items.sum { |cart_item| cart_item.item.price }), class: "btn btn-primary", data: { turbo: false } %>
      </form>
<!-- ... bouton stripe ... -->
  </ul>
