<!--Section Index Items avec les 10 derniers items-->
<div class="bg-white py-12">
  <div class="isolate bg-white px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <div class="text-center text-neutral-900 text-base font-semibold leading-relaxed">DERNIERS AJOUTS</div>
      <h2 class="text-5xl font-medium tracking-tight text-neutral-900 sm:text-4xl">Contact sales</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">Aute magna irure deserunt veniam aliqua magna enim voluptate.</p>
    </div>
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-1 gap-y-1 pt-2 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none md::grid-cols-2 lg:grid-cols-3">
      <% @latest_items = @items.last(9) %>
      <% @latest_items.each do |item| %> 
        <article class="flex max-w-xl flex-col items-center justify-between">
          <div class="group relative">
            <div class="md:w-96 md:h-72 justify-center overflow-hidden flex items-center inline-flex">
              <%= link_to(image_tag("kitty_cat.jpeg", class: "w-full h-full object-cover", alt: "kitten hiding into a jean"), item_path(item.id)) %>
            </div>
          </div>
          <div class="relative flex items-center gap-x-4">
            <div class="text-sm leading-6">
              <p class="font-semibold text-gray-900">
                <%= link_to(item.title, item_path(item.id)) %>
              </p>
              <p class="text-gray-600 text-center"><%= item.price %> euros</p>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</div>


